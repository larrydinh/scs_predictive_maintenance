{
  "name": "scs-pm-server",
  "version": "1.0.0",
  "description": "Server for the predictive maintenance",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run copy:csv-resources",
    "start:dev": "nodemon",
    "build": "tsc --build --force",
    "build:watch": "tsc --watch",
    "build:fast": "tsc --build",
    "start": "node bin/scs-pm-server | pino-pretty -c -t",
    "test": "jest --config jest.config.js",
    "test:ci": "jest --config ./jest.config.js  --ci  --runInBand",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.{ts,js}'",
    "copy:csv-resources": "cpx \"src/raw-data/**\" \"build/dist/raw-data/\" -v -C",
    "generate-license-info": "node scripts/generate-license-info"
  },
  "keywords": [
    "SCS",
    "Predictive-Maintenance"
  ],
  "author": "Amit Sharma",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "26.6.0",
    "jest-junit": "^12.0.0",
    "nodemon": "2.0.15",
    "npm-license-tracker": "3.0.0",
    "prettier": "2.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cpx": "1.5.0",
    "csv-parse": "5.0.4",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "pino": "7.5.1",
    "pino-pretty": "7.2.0",
    "scs-pm-core": "^1.0.0",
    "tslib": "2.3.1"
  }
}
